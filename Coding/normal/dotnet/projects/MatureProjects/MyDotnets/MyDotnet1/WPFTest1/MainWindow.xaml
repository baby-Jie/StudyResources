<Window x:Class="WPFTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="TestBtn"
                    Click="TestBtn_OnClick"></Button>
            <RichTextBox FontSize="96"
                         PreviewKeyDown="UIElement_OnKeyDown"
                         x:Name="TestRichTextBox"></RichTextBox>
        </StackPanel>
    </Grid>
</Window>
